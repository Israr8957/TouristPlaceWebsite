  <% layout("/layouts/boilerplate") -%>
  
  <div class="row mt-3 mb-5">
    <div class="col-8 offset-3 ">
      <h2>Listing Details</h2>
    </div>
      <div class="card col-5 offset-3 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-image" alt="Listing-image">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br>
            <%= listing.description %><br>
            <b>&#8377; <%= listing.price.toLocaleString("en-IN") %></b><br>
            <%= listing.location %> <br>
            <%= listing.country %>
          </p>
        </div>
      </div>
    

    <br> 
    <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit</a>
      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
  </div>
  




  
